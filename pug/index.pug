doctype html

html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title= 'Evan Dorsky'

        link(href='stylesheets/style.css', rel='stylesheet')
        script(src='js/zepto.min.js')

        script(type='text/javascript').
            var categories = !{JSON.stringify(categories)}

        script(src='js/main.js')

    body
        .container
            .me
                h1 Evan Dorsky

                ul
                    li Olin College Electrical and Computer Engineering '16
                    li Hardware System Integration Engineer at Apple
                    li Living in San Francisco

            .portfolio
                each cat, key in categories
                    .cat(cat=key)
                        .cat-title #{key}
                        .photo-box
                            each image in cat.images
                                img(src='img/'+key+'/'+image)