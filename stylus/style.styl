@import "sanfrancisco"

bg-color = white
text-color = black

*
    padding 0
    margin 0

body
    background-color bg-color
    font-family San Francisco
    font-size 1em
    color text-color
    margin 0 auto
    
li
    list-style-type none
    
h1, h2, h3, h4, h5, h6
    font-weight 300

//page
.container
    display flex
    flex-flow row wrap
    justify-content center
    
    align-items center
    padding 1.5rem

    max-width 800px
    margin 0 auto

.me
    display flex
    flex 1 100%
    flex-flow row wrap
    
    justify-content space-around
    
    h1
        margin 1rem
    
    ul
        margin 1rem

.portfolio
    flex 1 100%
    flex-flow column nowrap

.cat
    margin 0 1.5rem

.cat-title
    font-size 1.6rem
    font-weight 200

    margin-bottom .75rem

.black-line
    margin-left 2rem
    background-color black
    height 3px
    width 15rem

.photo-box
    padding 1.2rem 0 1.5rem 3rem
    display flex
    flex-flow row wrap

    overflow scroll

    max-width 100%

.cat-img
    flex 0
    position relative

    margin-right 2rem

    height 10rem
    
    border-top 1px solid #ccc
    border-left 1px solid #ccc
    &:hover
        img.color
            display block
     
    img
        height 100%

        &.color
            position absolute
            top 0
            left 0
            display none
