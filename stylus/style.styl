@import "sanfrancisco"

*
    padding 0
    margin 0

body
    font-family San Francisco
    font-size 1em
    margin 0 auto
    
li
    list-style-type none
    
h1, h2, h3, h4, h5, h6
    font-weight 300

//page
.container
    display flex
    flex-flow row wrap
    justify-content center
    
    align-items center

.me
    display flex
    flex 1 100%
    
    h1
        flex 1 0 auto
    
    ul
        flex 1 0 auto

.portfolio
    flex 1 100%
    flex-flow column nowrap

    .cat-title
        font-size 2rem
        font-weight 200

    .photo-box
        img
            height 10rem
            margin 0 2rem