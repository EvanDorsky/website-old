@import "sanfrancisco"

bg-color = white
text-color = black

*
    padding 0
    margin 0

body
    background-color bg-color
    font-family San Francisco
    font-size 1em
    color text-color
    margin 0 auto
    
li
    list-style-type none
    
h1, h2, h3, h4, h5, h6
    font-weight 300

//page
.container
    display flex
    flex-flow row wrap
    justify-content center
    
    align-items center
    padding 1.5rem

    max-width 900px
    margin 0 auto

.me
    display flex
    flex 1 100%
    flex-flow row wrap
    
    justify-content space-around
    
    h1
        margin 1rem

    .email
        font-size .9rem
        font-weight 200
        text-align center

        em
            font-style normal
            font-size .5rem
    
    .info
        margin 1rem

    ul.past
        opacity .5

.portfolio
    max-width 100%

.cat-title
    font-size 1.6rem
    font-weight 200

.cat
    padding .5rem 1.5rem

.photo-box
    margin .3rem 0
    display flex
    
    overflow-y hidden
    overflow-x scroll
    
    border-radius 3px

.cat.courses
    .cat-img
        flex 0 1 auto
        text-align center
        
        font-weight 200
        font-size 1.4rem

        padding .75rem
        margin-right 2rem

        color white
        background-color #000
        
        height auto

.cat-img
    border-radius 3px
    flex 0
     
    &:not(:last-child)
        padding-right 2rem

.img-container
    overflow hidden
    border-radius 3px
    height 10rem
    
    position relative

    img
        height 100%

        &.color
            position absolute
            top 0
            left 0
            display none

            &.active
                opacity 1 !important
                display block
                
    &:hover
        img.color
            display block
            opacity 0.7

.whiteout
    position absolute
    background-color white
    width 100%
    height 100%
    opacity 0

    transition opacity 100ms ease-in-out

    &.opaque
        opacity 0.3
                
.cat-details
    display none
