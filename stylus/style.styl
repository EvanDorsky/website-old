@import "sanfrancisco"
@import "arvo"
@import "nixieone"
@import "bitstream"

bg-color = white
text-color = black

focus-time = 300ms

*
    padding 0
    margin 0

body
    background-color bg-color
    font-family San Francisco
    font-size 1em
    color text-color
    margin 0 auto
    
li
    list-style-type none
    
h1, h2, h3, h4, h5, h6
    font-weight 300

//page
.container
    display flex
    flex-flow row wrap
    justify-content center
    
    align-items center
    padding 1.5rem

    max-width 900px
    margin 0 auto

.me
    display flex
    flex 1 100%
    flex-flow row wrap
    
    justify-content center
    align-items center

    .header
        margin 1rem 2rem
    
    h1
        margin-bottom .5rem

    .email
        font-size .9rem
        font-weight 200
        text-align center

        em
            font-style normal
            font-size .5rem

    img.evan
        height 6rem
        border-radius 50%
    
    .info
        margin 1rem 0

    ul.past
        opacity .5

.portfolio
    max-width 100%

.cat-title
    font-size 1.6rem
    font-weight 400

    transition opacity focus-time

    &.active
        opacity .4

.cat
    padding .5rem 1.5rem

.photo-box
    margin .3rem 0
    display flex
    
    overflow-y hidden
    overflow-x scroll
    
    border-radius 3px

.cat.courses
    .photo-box
        flex-flow row wrap
    .cat-img
        position relative
        
        flex 0 0 auto
        text-align center
        
        font-weight 200
        font-size 1.4rem

        padding .75rem
        margin .5rem 1rem

        color white
        background-color #000
        
        height auto

    .whiteout
        margin -.75rem

.cat-img
    &.fade
        opacity 0.7

    transition opacity focus-time
        
    border-radius 3px
    flex 0
     
    &:not(:last-child)
        padding-right 2rem

.img-container
    overflow hidden
    border-radius 3px
    height 10rem
    
    position relative

    img
        height 100%

        transition opacity focus-time
        &.color
            border-radius 3px
            position absolute
            top 0
            left 0
            opacity 0

            &.active
                opacity 1 !important
                
    &:hover
        img.color
            opacity 0.7

.whiteout
    position absolute
    background-color white
    width 100%
    height 100%
    opacity 0

    transition opacity focus-time

    &.opaque
        opacity 0.3
        
.cat-details
    visibility hidden
    height 0
    opacity 0

    padding 0 1rem

    max-width 600px
    margin 0 auto

    transition padding focus-time,
        opacity focus-time
    
    h2
        transition padding focus-time

    .role
        text-transform uppercase
        font-size .75rem
        font-weight 600

    .date
        font-size .85rem
        text-transform uppercase
        text-align center
        padding .5rem
        opacity 0.6
        font-weight 200
        font-style italic
    
    p
        padding 0 1rem
        transition padding-top focus-time
        padding 0

    &.visible
        visibility visible

    &.active
        height auto
