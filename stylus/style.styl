@import "sanfrancisco"

*
    padding 0
    margin 0

body
    font-family San Francisco
    font-size 1em
    margin 0 auto
    
li
    list-style-type none
    
h1, h2, h3, h4, h5, h6
    font-weight 300

//page
.container
    display flex
    flex-flow row wrap
    justify-content center
    
    align-items center

.top
    display flex
    flex 1 100%

    .me
        position relative
        margin 2rem 2rem 2rem 1rem
        img
            border-radius 50%
            height 15rem

    .candid
        color white
        text-align center
        position absolute
        left 50%
        top 89%
        transform translate(-50%, -50%)
        display none
        
    &:hover .candid
        display block
        
    .info
        display flex
        flex-flow column wrap
        justify-content center

.bottom
    display flex
    flex-flow row wrap
    
    flex 0 60%
    
    .categories
        display flex

        flex 0 1 100%
        justify-content space-around

    .photo-box
        display flex
        
        flex 0 1 100%
        justify-content space-around
        align-items center
        
        img
            flex 1 0 auto
            width 1rem
