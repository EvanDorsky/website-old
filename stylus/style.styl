@import "sanfrancisco"

bg-color = #232425
text-color = #fefefe

*
    padding 0
    margin 0

body
    background-color bg-color
    font-family San Francisco
    font-size 1em
    color text-color
    margin 0 auto
    
li
    list-style-type none
    
h1, h2, h3, h4, h5, h6
    font-weight 300

//page
.container
    display flex
    flex-flow row wrap
    justify-content center
    
    align-items center

.me
    display flex
    flex 1 100%
    
    h1
        flex 1 0 auto
    
    ul
        flex 1 0 auto

.portfolio
    flex 1 100%
    flex-flow column nowrap

    .cat-title
        padding 1rem

        font-size 2rem
        font-weight 200

    .photo-box
        display flex
        flex-flow row wrap

        margin 0 2rem
        padding 2rem .5rem
        overflow scroll

        max-width 100%
        
        background-color darken(bg-color, 10%)

.cat-img
    flex 0
